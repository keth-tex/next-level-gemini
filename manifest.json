{
  "manifest_version": 3,
  "name": "Next Level Gemini",
  "version": "1.0",
  "description": "A chromium browser extension to improve Google Gemini",
  
  "permissions": [
    "downloads",
    "storage"
  ],
  
  "host_permissions": [
    "https://gemini.google.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": [
        "turndown.js",
        "turndown-plugin-gfm.js",
        "fouc-fix.js",
        "feature-export.js",
        "feature-resizer.js",
        "feature-folders.js",
        "main.js"
      ],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ],

  "icons": {
    "128": "icon.png" 
  }
}